<!--pages/reloadphone/reloadphone.wxml-->
<view class='content'>
  <view class='hr'></view>
  <view class='numbg'>
    <view>+86</view>
    <view><input type='number' placeholder='请输入要变更的手机号' maxlength='11' bindinput="input_phoneNum"></input></view>
  </view>
  
  <view class='mobileInfo'>
    <view class='mobile'>
      <input type='number' name='code' placeholder='短信验证码' placeholder-class='holder' bindinput='accountInput' maxlength='6'></input>
    </view>  
    <button class='code' bindtap='sendCheckCode'>验证码({{time}}s)</button>
  </view>
  <view class='hr'></view>
  <view class='submitbutton'>
    <button class='btn' disabled='{{disabled}}' type='{{btnstate}}' bindtap='firstLogin'>确认更改</button>
  </view>
  <view class='hr'></view>
  
</view>