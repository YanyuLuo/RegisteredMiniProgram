/* pages/mobile/mobile.wxss */
.content{
  width: 100%;
  height: 600px;
  background-color: #f2f2f2;
}
.hr{
  padding-top: 20px;
}
.numbg{
  border: 1px solid #cccccc;
  width: 90%;
  margin:  0 auto;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  height: 50px;
  margin-bottom: 15px;
}
.numbg view{
  margin-left: 20px;
  margin-top: 14px;
}

.mobileInfo{
  display: flex;
  flex-direction: row;
}
.mobileInfo view{
  margin-left: 20px;
  margin-top: 14px;
}
.mobile{
  margin: 0 auto;
  border: 1px solid #cccccc;
  height: 40px;
  width: 50%;
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: 15px;
  display: flex;
  flex-direction: row;
  margin-left: 5%;
  text-align: center;
  
}
.code{
  border: 1px solid #cccccc;
  height: 40px;
  width: 35%;
  background-color: #EFEEEC;
  border-radius: 10px;
  text-align: center;
  margin-left: 10px;
  line-height: 40px;
  color: #999999;
  font-size: 15px;
  margin-bottom: 15px;
  margin-right: 5%;
}
.holder{
  margin-top: 4px;
}