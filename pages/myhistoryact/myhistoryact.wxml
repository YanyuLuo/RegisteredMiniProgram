<!--pages/myhistoryact/myhistoryact.wxml-->
<view class='listhead'>
  <view>所有历史参与活动有{{count}}个</view>
</view>
<view class='listbody'>
  <view class='item' bindtap='seeDetail' wx:for="{{plist}}" wx:key="" data-index='{{index}}'>
    <view><image src='../../images/tu07.jpg' style='width:75px;height:58px;'></image></view>
    <view class='desc'>
      <view class='title'>{{plist[index].actName}}</view>
      <view class='count'>
        <view>{{plist[index].actOkTime}}</view>
        <view class='liulan'>发布者:{{plist[index].userName}}</view>
      </view>
    </view> 
  </view>

</view>
<view class='dixian' wx:if="{{flag}}">
  -----------------我是有底线的-----------------
</view>