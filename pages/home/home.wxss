/* pages/movie/movie.wxss */ 
.swiperPic{
  width: 100%;
  height: 200px;
  display: flex;
}
.swi{
  width: 100%;
  height: 200px;
  
}
.slide-image{  
    width: 100%; 
}  
.ahr{
  height: 1px;
  background-color: #cccccc;
  margin-top: 0px;
  opacity: 0.5;
}
.bhr{
  height: 10px;
  background-color: #cccccc;
  margin-top: 15px;
  opacity: 0.2;
}
.swiperNotice{
  display: flex;
  flex-direction: row;
}
.noticeIcon{
  height: 15px;
  width: 15px;
  margin-left: 10px;
  margin-top: 11px;
}
.swiper_container {
  height: 55rpx;
  width: 80vw;
  margin-left: 10px;
  margin-top: 10px;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 1px;
}
.nav{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.nav-item{
  width: 25%;
  margin-top: 20px;
  font-size: 12px;
}
.item{
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  margin-bottom: 5px;
}
.desc{
  margin-left: 20px;
  line-height: 30px;
}
.title{
  font-weight: bold;
}
.count{
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}
.liulan{
  position: absolute;
  left: 250px;
}
.pinglun{
  position: absolute;
  right: 30px;
}
.listhead{
  display: flex;
  flex-direction: row;
  margin: 10px;
  font-size: 13px;
  color: #999999;
}
.rightlog{
  position: absolute;
  right: 10px;
  color: #cccccc;
}

.dixian{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 13px;
  color: #999999;
  align-items: center;
}
